- if @group.errors.any?
  #error_explanation
    %ul
      - @group.errors.full_messages.each do |msg|
        %li= msg
= form_for([:admin, @group], html: {class: "form-horizontal"}) do |f|
  = f.hidden_field :season_id, value: @season_id
  %fieldset
    .control-group
      = f.label :name, t(:name), class: "control-label"
      .controls
        = f.text_field :name
    .control-group
      = f.label :show_order, t(:show_order), class: "control-label"
      .controls
        = f.number_field :show_order
    .form-actions
      = f.submit t(:submit, default: "Submit"), class: "btn btn-primary"
