.row
  .span10.page-header
    %h2.span2.inline Details
    - if @expense.open? || current_user.admin?
      = link_to edit_expense_path(@expense), {class: "span1 btn btn-success" } do |expense|
        %i.icon-edit.icon-white
        = t(:edit)
    - else
      .span1.btn.btn-success.disabled
        %i.icon-edit.icon-white
        = t(:edit)
    - if @expense.open? && current_user.admin?
      = link_to new_balancer_expense_path(@expense), {class: "span1 btn btn-primary" } do
        %i.icon-edit.icon-white
        = t(:balance_out)
    - else
      .span1.btn.btn-primary.disabled
        %i.icon-edit.icon-white
        = t(:balance_out)

- if @expense.valid_req
  %dl
    .row
      %dt.span1 No.
      %dd.span2= @expense.id
      %dt.span1= t(:_date)
      %dd= l @expense.used_date
      %dt.span1= t(:member)
      %dd= @expense.member.try(:fullname)
    .row
      %dt.span1= t(:charge)
      %dd.span2
        - if @expense.budget
          = @expense.budget.group.name
          = @expense.budget.title
        - else
          %strong.text-error None
      %dt.span1= t(:status)
      %dd
        %strong
          - if @expense.closed?
            .text-success.span1= t(:closed)
          - else
            .text-error.span1= t(:open)
    %h5.row
      %dt.span1= t(:amount)
      %dd.span2= number_to_currency(@expense.amount)
    %dt
      %h5= t(:description)
    %dd= @expense.description
    %dt
      %h5= t(:user_note)
    %dd= @expense.user_note
- else
  %h4 Invalid entry
<hr>
%h5  comments
#comments
  = render 'comments'

<hr>
%dl.dl-horizontal
  %dt Created at
  %dd= @expense.created_at.getlocal
  %dt Updated at
  %dd= @expense.updated_at.getlocal
