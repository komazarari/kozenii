- if @income.errors.any?
  #error_explanation
    %ul
      - @income.errors.full_messages.each do |msg|
        %li= msg
= form_for(@income, html: {class: "form-horizontal"}) do |f|
  %fieldset
    .control-group
      .controls.small-text
        = t(:required, default: 'required(*)')
    .control-group
      = f.label :obtained_date, t(:obtained_date) + '*', class: "control-label"
      .controls
        = f.date_select :obtained_date, {use_month_numbers: true, order: [:year, :month, :day]}, {class: "date_select"}
    .control-group
      = f.label :amount, t(:amount) + '*', class: "control-label"
      .controls
        = f.number_field :amount
    .control-group
      = f.label :description, t(:description) + '*', class: "control-label"
      .controls
        = f.text_field :description
    .control-group
      = f.label :member_id, t(:member), class: "control-label"
      .controls
        = f.select :member_id, options_from_collection_for_select(Member.part_order, :id, :nick, selected: @income.member_id), {include_blank: t(:other_member)}
    .control-group
      = f.label :comment, t(:comment), class: "control-label"
      .controls
        = f.text_field :comment
    .form-actions
      = f.submit t(:submit, default: "Submit"), class: "btn btn-primary"
